[
  {
    "name": "npm 配置文件",
    "description": "创建一个基础 pnpm 配置文件",
    "type": "file",
    "files": [
      {
        "name": ".npmrc",
        "content": [
          "# 设置阿里仓库源",
          "registry=\"https://registry.npmmirror.com\"",
          "# 在国内使用pnpm安装electron需要配置一下electron的下载路径",
          "electron_mirror=\"https://npmmirror.com/mirrors/electron/\"",

          "# 为 @byted-mind-note 包配置特定的仓库源",
          "@byted-mind-note:registry=https://packages.aliyun.com/6558693961e5541a23aa40f3/npm/npm-registry/",
          "@byted-mind-note:always-auth=true",

          "engine-strict=true",
          "node-version=16.5.0"
        ]
      }
    ]
  }
]
